{
    "name": "atk4/login",
    "description": "Login and User module for Agile UI",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "user",
        "acl",
        "auth",
        "login",
        "atk4",
        "agile",
        "agile ui",
        "data",
        "framework"
    ],
    "authors": [
        {
            "name": "Romans Malinovskis",
            "email": "romans@agiletoolkit.org",
            "homepage": "https://nearly.guru/"
        },
        {
            "name": "Michael Voříšek",
            "homepage": "https://mvorisek.cz/"
        }
    ],
    "homepage": "https://github.com/atk4/login",
    "require": {
        "php": ">=7.4 <8.4",
        "atk4/ui": "~5.0.0"
    },
    "require-dev": {
        "atk4/behat-mink-selenium2-driver": "^1.6.2",
        "behat/mink-extension": "^2.3.1",
        "ergebnis/composer-normalize": "^2.13",
        "ergebnis/phpunit-slow-test-detector": "^2.9",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.0",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.3",
        "phpunit/phpunit": "^9.5.5"
    },
    "conflict": {
        "behat/behat": "<3.9",
        "behat/mink": "<1.9",
        "symfony/console": "<4.4.30 || >=5 <5.3.7",
        "symfony/css-selector": "<4.4.24 || >=5 <5.2.9"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Atk4\\Login\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Atk4\\Login\\Tests\\": "tests/"
        },
        "files": [
            "vendor/atk4/ui/tests/CreateAppTrait.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    }
}
